<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/ideaChannelFragment">
    <fragment
        android:id="@+id/ideaChannelFragment"
        android:name="com.gdn.android.onestop.ideation.fragment.IdeaChannelFragment"
        android:label="@string/label_idea_channel"
        tools:layout="@layout/fragment_idea_channel" >
    </fragment>
    <fragment
        android:id="@+id/groupFragment"
        android:name="com.gdn.android.onestop.group.fragment.GroupFragment"
        android:label="@string/label_idea_channel"
        tools:layout="@layout/fragment_group" >
        <action
            android:id="@+id/action_groupFragment_to_groupCreateFragment"
            app:destination="@id/groupCreateFragment" />
        <action
            android:id="@+id/action_groupFragment_to_groupChatFragment"
            app:destination="@id/groupChatFragment" />

    </fragment>
    <activity
        android:id="@+id/loginActivity"
        android:name="com.gdn.android.onestop.login.LoginActivity"
        android:label="Login"
        tools:layout="@layout/activity_login" />
</navigation>