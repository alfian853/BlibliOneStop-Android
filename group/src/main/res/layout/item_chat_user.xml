<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <TextView
        android:id="@+id/tv_message"
        style="@style/ChatTip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/chat_tip_blue"
        android:maxWidth="315dp"
        android:text="Hello\nMy name is alfian"
        android:minWidth="50dp"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:text="@string/date_time"
        android:textSize="@dimen/size_text_h6"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="@+id/tv_message"
        app:layout_constraintTop_toBottomOf="@+id/tv_message" />

    <ProgressBar
        android:id="@+id/pb_sending"
        android:layout_width="@dimen/size_img_6"
        android:layout_height="@dimen/size_img_6"
        android:layout_gravity="bottom"
        app:layout_constraintBottom_toBottomOf="@+id/tv_message"
        app:layout_constraintEnd_toStartOf="@+id/tv_message" />


</androidx.constraintlayout.widget.ConstraintLayout>