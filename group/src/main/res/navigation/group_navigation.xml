<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/groupChatFragment"
    tools:ignore="UnusedNavigation">

    <fragment
        android:id="@+id/groupFragment"
        android:name="com.gdn.android.onestop.group.fragment.GroupFragment"
        android:label="@string/groups"
        tools:layout="@layout/fragment_group" >
    </fragment>
    <fragment
        android:id="@+id/groupCreateFragment"
        android:name="com.gdn.android.onestop.group.fragment.GroupCreateFragment"
        android:label="fragment_group_create"
        tools:layout="@layout/fragment_group_create" >
    </fragment>
    <fragment
        android:id="@+id/groupChatFragment"
        android:name="com.gdn.android.onestop.group.fragment.GroupChatFragment"
        android:label="fragment_chat_room"
        tools:layout="@layout/fragment_chat_room">
        <argument
            android:name="groupModel"
            app:argType="com.gdn.android.onestop.group.data.Group" />
        <action
            android:id="@+id/to_meetingNoteListFragment"
            app:destination="@id/meetingNoteListFragment" />
    </fragment>
    <fragment
        android:id="@+id/meetingNoteListFragment"
        android:name="com.gdn.android.onestop.group.fragment.MeetingNoteListFragment"
        android:label="MeetingNoteListFragment"
        tools:layout="@layout/fragment_note_list">
        <argument
            android:name="group"
            app:argType="com.gdn.android.onestop.group.data.Group" />
        <argument
            android:name="scrollTargetId"
            app:argType="string"
            app:nullable="true" />
        <action
            android:id="@+id/action_meetingNoteListFragment_to_meetingNoteFragment"
            app:destination="@id/meetingNoteFragment" />
    </fragment>
    <fragment
        android:id="@+id/meetingNoteFragment"
        android:name="com.gdn.android.onestop.group.fragment.MeetingNoteFragment"
        android:label="MeetingNoteFragment"
        tools:layout="@layout/fragment_note">
        <argument
            android:name="meetingNoteId"
            app:argType="string" />
    </fragment>
    <activity
        android:id="@+id/groupActivity"
        android:name="com.gdn.android.onestop.group.GroupActivity"
        android:label="GroupActivity">
        <argument
            android:name="groupModel"
            app:argType="com.gdn.android.onestop.group.data.Group" />
    </activity>
</navigation>