<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_user_alias"
        android:background="@color/colorPrimaryDark"
        android:text="AL"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="@dimen/size_text_h4"
        android:layout_marginEnd="8dp"
        android:foreground="@drawable/border_round_image"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginRight="8dp" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_toRightOf="@id/tv_user_alias"
        android:layout_alignTop="@id/tv_user_alias"
        android:layout_width="match_parent"
        android:textSize="@dimen/size_text_h4"
        android:textColor="@color/black"
        android:layout_height="wrap_content"
        android:text="@string/username"
        android:textStyle="bold"
        android:layout_toEndOf="@id/tv_user_alias" />

    <TextView
        android:id="@+id/tv_message"
        android:layout_below="@id/tv_title"
        android:layout_toRightOf="@id/tv_user_alias"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/tv_user_alias" />

</RelativeLayout>
